@model Rental.Web.Models.BookingDto

@{
    ViewData["Title"] = "BookingForm";
}




<h1>Reservar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="bookingForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div id="partialBooking">
                <partial name="_PartialBooking" model="Model" />
            </div>
            <div class="form-group">
                <input type="submit" value="Reservar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    @if (ViewBag.Error != null)
    {
        <script type="text/javascript">
                    window.onload = function () {
                        errorNotification({ message: '@ViewBag.Error' });
                    };
        </script>
    }
</div>

<div>
    <a asp-action="Index" asp-controller="Vehicles">Voltar para veículos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
